<%= form_with model: product do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    
    <div>
      <%= f.label :description, style: "display: block" %>
      <%= f.rich_text_area :description %>
    </div>
    
    <div>
      <%= f.label :featured_image, style: "display: block" %>
      <%= f.file_field :featured_image, accept: "image/*"%>
    </div>
    
    <div>
      <%= f.label :inventory_count, style: "display: block" %>
      <%= f.number_field :inventory_count %>
    </div>

    <div>
      <%= f.submit %>
    </div>
<% end %>
