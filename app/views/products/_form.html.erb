<%= form_with model: product do |f| %>
    <div>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    
    <div>
      <%= f.label :description, style: "display: block" %>
      <%= f.rich_text_area :description %>
    </div>

    <div>
      <%= f.submit %>
    </div>
<% end %>
